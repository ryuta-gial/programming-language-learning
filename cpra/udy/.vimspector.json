{
  "configurations": {
    "Launch": {
      "adapter": "vscode-cpptools",
      "configuration": {
        "name": "cpp",
        "type": "cppdbg",
        "request": "launch",
        "program": "${fileDirname}/${fileBasenameNoExtension}",
        "cwd": "${workspaceRoot}",
        "stopOnEntry": true,
        "stopAtEntry": true,
        "externalConsole": true,
        "MIMode": "lldb"
      }
    }
  }
}
